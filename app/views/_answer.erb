<h2 id="answer-content"><%= answer.content%></h2>

  <form method="post" action='/answers/<%=answer.id%>/vote' class="inline answer-upvote-button">

    <button type="submit" name="vote_num" value="1" class="fa fa-sort-desc vote-button upvote-butn"></button>
    <input type="hidden" name="type" value="Answer">
    <input type="hidden" name="vote_num" value="1">
  </form>

  <div id="answer-votes">
    <%=sum_votes(answer.votes)%>
  </div>

  <form method="post" action='/answers/<%=answer.id%>/vote' class="inline answer-downvote-button">
    <button type="submit" name="vote_num" value="-1" class="fa fa-sort-desc vote-button downvote-button"></button>
    <input type="hidden" name="type" value="Answer">
    <input type="hidden" name="vote_num" value="-1">
  </form>
  <br>



    <form method="post" action='/answers/<%=answer.id%>/best' class="inline">
    <button type="submit" name="vote_num" value="1" class="best-answer">Vote Best Answer</button>
    <input type="hidden" name="type" value="Answer">
  </form>


  <h4>Comments</h4>
  <ul>
  <%answer.comments.each do |comment|%>
     <li> <%= erb :'_comment', locals:{comment: comment} %> </li>
  <%end%>
</ul>




<button type="click" class="answer_comment">Comment on this answer</button>

<div id="answer_comment_form_container">
  <form class="answer_comment_form" class="classy" action="/comments" method="post">
  <textarea rows="2" cols="50" type='text' name='comment[content]'></textarea>
  <input type="hidden" name="commentable_id" value="<%=answer.id%>">
  <input type="hidden" name="question_id" value="<%=question_id%>">
  <input type="hidden" name="comment_type" value="Answer">
  <input type="submit" value="Submit Comment">
  <br>
</form>
</div>

  <% if answer.best_answer%>
    <p>Voted Best Answer!</p>
  <%end%>






